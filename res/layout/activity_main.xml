<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guidingfriend.MainActivity" >

    <Button
        android:id="@+id/fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/twitter_login_button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/twitter_login_button"
        android:layout_marginTop="174dp"
        android:background="@color/fb_blue"
        android:text="Login with Facebook"
        android:onClick="loginFacebook" />

    <TextView
        android:id="@+id/welcome_to_guidingfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Guiding Friend!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/insta" />

    <Button
        android:id="@+id/twitter_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/twitter_blue"
        android:layout_alignLeft="@+id/instagram_login_button"
        android:layout_alignRight="@+id/instagram_login_button"
        android:layout_below="@+id/fb_login_button"
        android:layout_marginTop="31dp"
        android:text="Login with Twitter" />

    <Button
        android:id="@+id/instagram_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/insta"
        android:layout_below="@+id/twitter_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Login with Instagram" />

</RelativeLayout>