<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guidingfriend.SearchActivity" >

    <Button
        android:id="@+id/about_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/insta"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:text="About Me" />

    <ImageButton
        android:id="@+id/nearby_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_me_button"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="78dp"
        android:src="@drawable/com_facebook_place_default_icon" />

    <EditText
        android:id="@+id/text_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nearby_button"
        android:layout_toLeftOf="@+id/nearby_button"
        android:ems="10"
        android:hint="Nearby" />

    <EditText
        android:id="@+id/text_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nearby_button"
        android:layout_marginBottom="28dp"
        android:layout_toLeftOf="@+id/nearby_button"
        android:ems="10"
        android:hint="Search" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_search"
        android:layout_alignLeft="@+id/nearby_button"
        android:layout_alignRight="@+id/nearby_button"
        android:src="@drawable/abc_ic_search_api_holo_light" />

</RelativeLayout>